<form action="/restaurants/{{rest.id}}?_method=PUT" method="POST" id="update-form">
  <section class="new-form-wrapper">
    <div class="input-items">
      <div class="input-item">
        <label for="">餐廳名字 : </label>
        <input type="text" placeholder="please input name" name="name" value="{{rest.name}}">
      </div>
      <div class="input-item">
        <label for="">餐廳英文名字 : </label>
        <input type="text" placeholder="please input name_en" name="name_en" value="{{rest.name_en}}">
      </div>
      <div class="input-item">
        <label for="">餐廳照片(URL) : </label>
        <input type="text" placeholder="please input restaurant's imageURL" name="image"  value="{{rest.image}}">
      </div>
      <div class="input-item">
        <label for="">餐廳類別 : </label>
        <input type="text" placeholder="please input restaurant's category" name="category" value="{{rest.category}}">
      </div>
      <div class="input-item">
        <label for="">餐廳評分 : </label>
        <input type="text" placeholder="please input restaurant's rating" name="rating" value="{{rest.rating}}">
      </div>
      <div class="input-item">
        <label for="">餐廳地址 : </label>
        <input type="text" placeholder="please input restaurant's location" name="location" value="{{rest.location}}">
      </div>
      <div class="input-item">
        <label for="">餐廳電話 : </label>
        <input type="text" placeholder="please input restaurant's phone" name="phone" value="{{rest.phone}}">
      </div>
      <div class="input-item">
        <label for="">餐廳Google Maps(URL) : </label>
        <input type="text" placeholder="please input restaurant's google maps URL" name="google_map" value="{{rest.google_map}}">
      </div>
      <div class="input-item">
        <label for="">餐廳描述 : </label>
        <input type="text" placeholder="please input restaurant's description" name="description" value="{{rest.description}}">
      </div>
    </div>
  </section>
</form>
<div class="edit-btns">
  <a href="/restaurants"  class="back-btn">back</a>
  <button type="submit" form="update-form" class="save-btn">Save</button>
</div>